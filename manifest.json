{
    "manifest_version": 3,
    "name": "Plus4u Pass",
    "description": "Pass plus4u credentials like a pro.",
    "version": "1.0.0",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "scripting",
        "contextMenus"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "128": "icons/icon96.png"
    },
    "host_permissions": [
        "http://*/",
        "https://*/"
    ],
    "action": {
        "default_title": "+4uPass",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    }
}